<!DOCTYPE html>
<html>
  <head>
    <title>Tanask</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
    <h1><%= t '.title'%> #<%= @task.id %></h1>

    <h3><%= t '.taskname' %> : </h3>
      <p><%= @task.name %></p>

    <h3><%= t '.description' %> : </h3>
      <p><%= @task.description %></p>

    <p><%= link_to t('.go_to_edit'), edit_task_path(@task) %></p>

    <p><%= link_to t('.delete'), @task, method: :delete, data:{
      confirm: 'Are you sure to delete this task?'
    }  %></p>

    <p><%= link_to t('.go_back_to_list'), tasks_path %></p>

  </body>
</html>
