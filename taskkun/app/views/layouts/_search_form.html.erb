<%= t '.title' %>
<%= form_with url: root_path, method: :get, local: true do |f| %>
  <%= t '.keyword_title' %>
  <%= f.text_field :title, value: @keyword %>
  <%= t '.status_title' %>
  <%= f.select :status, Task.statuses.map {|k, v| [t("tasks.status_list.#{k}"), v]}, include_blank: true, selected: @status %>
  <%= f.submit (t '.search_button'), :name => nil %>
  <%= f.hidden_field :category, value: "id" %>
  <%= f.hidden_field :order, value: "asc" %>
<% end %>
